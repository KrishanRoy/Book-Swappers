<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
   android:background="@drawable/random_books">


    <TextView
        android:id="@+id/detail_fragment_name_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Name"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="320dp"
        android:background="@drawable/textview_background"/>

    <TextView
        android:id="@+id/detail_fragment_city_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Location"
        android:textSize="25sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="190dp"
        android:background="@drawable/textview_background"/>

    <Button
        android:id="@+id/detail_fragment_email_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email_the_donor_textview"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="70dp"
        android:background="@drawable/button_background"/>
    <Button
        android:id="@+id/detail_fragment_send_text_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail_frag_send_a_text_button"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_background"/>
</android.support.constraint.ConstraintLayout>